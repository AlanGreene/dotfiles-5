# UNIX
alias ls='ls -aFh'
alias lso='ls -oaFh'

# Easier navigation: .., ..., ...., ....., ~ and -
# Thanks @mathias, et al.
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias -- -='cd -'
alias cddf='cd ~/Github/dotfiles'

# Shortcuts
alias v='mvim -v'
alias s='subl .'
alias o='open -R'
alias t='tmux'
alias rz='source $HOME/.zshrc'
alias td='todo.sh -d ~/.todo.cfg'
