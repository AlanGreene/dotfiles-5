[color]
	branch = true
	diff = true
	grep = true
	interactive = true
	log = true
	status = true
	ui = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	whitespace = space-before-tab,indent-with-non-tab,trailing-space,cr-at-eol
[diff]
	keepBackup = false
[help]
	autocorrect = 1
[merge]
	keepBackup = false
	tool = code
	conflictstyle = diff3
[push]
	default = simple
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[include]
	path = ~/.git.user.config
	path = ~/.gitconfig.local
